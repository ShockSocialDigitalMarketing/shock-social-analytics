    <script>
        // Chart.js configuration
        Chart.defaults.color = '#ffffff';
        Chart.defaults.plugins.legend.labels.color = '#ffffff';

        const brandColors = {
            primary: '#32D3FB',
            secondary: '#000000',
            accent: '#ffffff',
            gradient: ['#32D3FB', '#1a9cc9', '#0f7599']
        };

        // Response Time Comparison Chart
        const responseChart = new Chart(document.getElementById('responseChart'), {
            type: 'line',
            data: {
                labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4', 'Week 5', 'Week 6'],
                datasets: [
                    {
                        label: 'Without Social Media Manager',
                        data: [180, 165, 190, 175, 185, 170],
                        borderColor: '#ff6b6b',
                        backgroundColor: '#ff6b6b30',
                        borderWidth: 3,
                        tension: 0.4,
                        fill: true
                    },
                    {
                        label: 'With Social Media Manager',
                        data: [15, 8, 5, 3, 4, 2],
                        borderColor: brandColors.primary,
                        backgroundColor: brandColors.primary + '30',
                        borderWidth: 3,
                        tension: 0.4,
                        fill: true
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                        labels: { padding: 20, font: { size: 14 } }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { color: '#333' },
                        title: {
                            display: true,
                            text: 'Response Time (Minutes)',
                            color: '#fff'
                        }
                    },
                    x: {
                        grid: { color: '#333' }
                    }
                },
                interaction: {
                    intersect: false,
                    mode: 'index'
                }
            }
        });

        // Add animation effects
        document.addEventListener('DOMContentLoaded', function() {
            const section = document.querySelector('.comparison-section');
            section.style.opacity = '0';
            section.style.transform = 'translateY(30px)';
            section.style.transition = 'all 0.8s ease';
            
            setTimeout(() => {
                section.style.opacity = '1';
                section.style.transform = 'translateY(0)';
            }, 200);
        });
    </script>
